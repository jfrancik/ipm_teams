<h1>Reset your password</h1>

<%= form_for(@user, :url => update_reset_password_users_path) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :key %>
  </div>
  <div class="field">
    <%= f.label :new_password %><br />
    <%= f.password_field :new_password %>
  </div>
  <div class="field">
    <%= f.label :new_password_confirmation %><br />
    <%= f.password_field :new_password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Update password" %>
  </div>
<% end %>

<p><%= link_to 'Login Page', users_path %></p>
